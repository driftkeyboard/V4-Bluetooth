#include <dt-bindings/zmk/matrix_transform.h>
#include "7column.dtsi"

&drift_7col_layout {
    transform = <&default_transform>;
};

/ {
    chosen {
        //zephyr,display = &oled;
		zmk,kscan = &kscan0;
		zmk,physical-layout = &drift_7col_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;

        map = <
		RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)                 RC(0,7)  RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,13)
		RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)                 RC(1,7)  RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12) RC(1,13)
		RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)                 RC(2,7)  RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12) RC(2,13)
		RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(4,6) RC(4,7) RC(3,7)  RC(3,8)  RC(3,9)  RC(3,10) RC(3,11) RC(3,12) RC(3,13)
										RC(4,3) RC(4,4) RC(4,5)                 RC(4,8)  RC(4,9)
        >;
    };
	
	// Keyboard matrix definition
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";		
		diode-direction = "col2row";       // Current flows from column → row
		wakeup-source;                     // Allow wake from sleep on key press

		// Row pins (R0–R4) with pull-downs
		row-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH|GPIO_PULL_DOWN)>
		           ,<&pro_micro 19 (GPIO_ACTIVE_HIGH|GPIO_PULL_DOWN)>
		           ,<&pro_micro 18 (GPIO_ACTIVE_HIGH|GPIO_PULL_DOWN)>
		           ,<&pro_micro 15 (GPIO_ACTIVE_HIGH|GPIO_PULL_DOWN)>
		           ,<&pro_micro 14 (GPIO_ACTIVE_HIGH|GPIO_PULL_DOWN)>;
	};
	
	left_encoder: encoder_left {
        compatible = "alps,ec11";
		
		//switch values (0 and 21) when you need to invert this encoder		
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		
        steps = <80>;
        status = "disabled";
    };

    right_encoder: encoder_right {
        status = "disabled";
	};
	
	sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
};

&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 17)>,
                    <NRF_PSEL(TWIM_SCL, 0, 20)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 17)>,
                    <NRF_PSEL(TWIM_SCL, 0, 20)>;
            low-power-enable;
        };
    };
};